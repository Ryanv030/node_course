extends layouts/main-layout.pug

block content
  main
    if products.length > 0
      .grid
        each product in products
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
          .card__image
            img(src="data:image/jpeg;base64,", alt="eye of the tiger")
          .card__content
            h2.product__price $19.99
            p.product__description A boring book
          .card__actions
            button.btn Add to Cart
    else 
      h1 No Products 